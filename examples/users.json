{
  "model": "users",
  "title": "User Management",
  "description": "Manage system users with role-based permissions",
  "table": "users",
  "primary_key": "id",
  "timestamps": true,
  "soft_delete": true,
  "permissions": {
    "read": "view_users",
    "create": "create_user",
    "update": "edit_user",
    "delete": "delete_user"
  },
  "default_sort": {
    "user_name": "asc"
  },
  "row_template": "user_row",
  "fields": {
    "id": {
      "type": "integer",
      "label": "User ID",
      "auto_increment": true,
      "readonly": true,
      "sortable": true,
      "filterable": false,
      "searchable": false
    },
    "user_name": {
      "type": "string",
      "label": "Username",
      "required": true,
      "sortable": true,
      "filterable": true,
      "searchable": true,
      "validation": {
        "required": true,
        "unique": true,
        "length": {
          "min": 3,
          "max": 50
        }
      }
    },
    "first_name": {
      "type": "string",
      "label": "First Name",
      "required": true,
      "sortable": true,
      "filterable": true,
      "searchable": true,
      "validation": {
        "required": true,
        "length": {
          "max": 100
        }
      }
    },
    "last_name": {
      "type": "string",
      "label": "Last Name",
      "required": true,
      "sortable": true,
      "filterable": true,
      "searchable": true,
      "validation": {
        "required": true,
        "length": {
          "max": 100
        }
      }
    },
    "email": {
      "type": "string",
      "label": "Email Address",
      "required": true,
      "sortable": true,
      "filterable": true,
      "searchable": true,
      "validation": {
        "required": true,
        "email": true,
        "unique": true
      }
    },
    "phone": {
      "type": "string",
      "label": "Phone Number",
      "required": false,
      "sortable": false,
      "filterable": false,
      "searchable": true
    },
    "flag_enabled": {
      "type": "boolean",
      "label": "Account Enabled",
      "default": true,
      "sortable": true,
      "filterable": true,
      "searchable": false
    },
    "flag_verified": {
      "type": "boolean",
      "label": "Email Verified",
      "default": false,
      "sortable": true,
      "filterable": true,
      "searchable": false
    },
    "last_activity_at": {
      "type": "datetime",
      "label": "Last Activity",
      "readonly": true,
      "sortable": true,
      "filterable": true,
      "searchable": false,
      "filter_type": "greater_than",
      "date_format": "Y-m-d H:i:s"
    },
    "created_at": {
      "type": "datetime",
      "label": "Created At",
      "readonly": true,
      "sortable": true,
      "filterable": false,
      "searchable": false,
      "date_format": "Y-m-d H:i:s"
    },
    "updated_at": {
      "type": "datetime",
      "label": "Updated At",
      "readonly": true,
      "sortable": true,
      "filterable": false,
      "searchable": false,
      "date_format": "Y-m-d H:i:s"
    }
  }
}